{
  "name": "serum-machine",
  "version": "0.1.1",
  "engines": {
    "node": ">=12"
  },
  "description": "Real-time market data API server for Serum DEX",
  "main": "dist/index.js",
  "source": "src/index.js",
  "types": "dist/index.d.ts",
  "repository": "tardis-dev/serum-machine",
  "homepage": "https://github.com/tardis-dev/serum-machine",
  "scripts": {
    "build": "tsc",
    "precommit": "lint-staged",
    "test": "jest --runInBand --forceExit",
    "benchmark": "node ./benchmark.js",
    "prepare": "npm run build",
    "start": "npm run build && node ./bin/serum-machine.js --debug",
    "release": "cross-var \"npm run build && npm run test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish --access=public\""
  },
  "bin": {
    "serum-machine": "./bin/serum-machine.js"
  },
  "files": [
    "src",
    "dist",
    "bin"
  ],
  "keywords": [
    "serum dex",
    "serum api",
    "api client",
    "solana",
    "cryptocurrency api",
    "exchange"
  ],
  "license": "MPL-2.0",
  "dependencies": {
    "@project-serum/serum": "^0.12.2",
    "@solana/web3.js": "^0.74.0",
    "@types/bintrees": "^1.0.2",
    "@types/bn.js": "^4.11.6",
    "bintrees": "^1.0.2",
    "bn.js": "^5.1.3",
    "debug": "^4.1.1",
    "didyoumean2": "^4.1.0",
    "is-docker": "^2.1.1",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v18.4.0",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "cross-var": "^1.1.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2",
    "ws": "^7.3.1"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)?$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
