{
  "name": "serum-vial",
  "version": "1.1.3",
  "engines": {
    "node": ">=15"
  },
  "description": "Real-time WebSocket market data API server for Serum DEX",
  "main": "dist/index.js",
  "source": "src/index.js",
  "types": "dist/index.d.ts",
  "repository": "tardis-dev/serum-vial",
  "homepage": "https://github.com/tardis-dev/serum-vial",
  "scripts": {
    "build": "tsc",
    "precommit": "lint-staged",
    "test": "npm run build && jest --forceExit",
    "prepare": "npm run build",
    "start:debug": "npm run build && node ./bin/serum-vial.js --log-level=debug",
    "format": "prettier --write **/*.{ts,json,md,yaml}",
    "check-format": "prettier --check **/*.{ts,json,md,yaml}"
  },
  "bin": {
    "serum-vial": "bin/serum-vial.js"
  },
  "files": [
    "src",
    "dist",
    "bin"
  ],
  "keywords": [
    "serum dex",
    "serum api",
    "api client",
    "solana",
    "cryptocurrency api",
    "exchange",
    "defi"
  ],
  "license": "MPL-2.0",
  "dependencies": {
    "@project-serum/serum": "^0.13.54",
    "@solana/web3.js": "^1.22.0",
    "@types/bintrees": "^1.0.3",
    "@types/bn.js": "^5.1.0",
    "abort-controller": "^3.0.0",
    "bintrees": "^1.0.2",
    "bn.js": "^5.2.0",
    "didyoumean2": "^5.0.0",
    "is-docker": "^2.2.1",
    "node-fetch": "^2.6.1",
    "uWebSockets.js": "git+https://git@github.com/uNetworking/uWebSockets.js.git#v19.4.0",
    "winston": "^3.3.3",
    "ws": "^7.5.3",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.3",
    "@types/node-fetch": "^2.5.12",
    "@types/ws": "^7.4.7",
    "cross-var": "^1.1.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)?$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
