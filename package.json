{
  "name": "serum-vial",
  "version": "0.1.0",
  "engines": {
    "node": ">=12"
  },
  "description": "Real-time WebSocket market data API server for Serum DEX",
  "main": "dist/index.js",
  "source": "src/index.js",
  "types": "dist/index.d.ts",
  "repository": "tardis-dev/serum-vial",
  "homepage": "https://github.com/tardis-dev/serum-vial",
  "scripts": {
    "build": "tsc",
    "precommit": "lint-staged",
    "test": "jest --runInBand --forceExit",
    "prepare": "npm run build",
    "start:debug": "npm run build && node ./bin/serum-vial.js --log-level=debug",
    "format": "prettier --write **/*.{ts,json,md,yaml}",
    "check-format": "prettier --check **/*.{ts,json,md,yaml}"
  },
  "bin": {
    "serum-vial": "./bin/serum-vial.js"
  },
  "files": [
    "src",
    "dist",
    "bin"
  ],
  "keywords": [
    "serum dex",
    "serum api",
    "api client",
    "solana",
    "cryptocurrency api",
    "exchange",
    "defi"
  ],
  "license": "MPL-2.0",
  "dependencies": {
    "@project-serum/serum": "^0.13.25",
    "@solana/web3.js": "^0.94.2",
    "@types/bintrees": "^1.0.3",
    "@types/bn.js": "^5.1.0",
    "bintrees": "^1.0.2",
    "bn.js": "^5.2.0",
    "didyoumean2": "^4.1.0",
    "is-docker": "^2.1.1",
    "uWebSockets.js": "git+https://git@github.com/uNetworking/uWebSockets.js.git#v18.14.0",
    "winston": "^3.3.3",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "cross-var": "^1.1.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)?$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
